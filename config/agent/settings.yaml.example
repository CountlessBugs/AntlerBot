context_limit_tokens: 8000
timeout_summarize_seconds: 1800
timeout_clear_seconds: 3600
reply_max_length: 50

media:
  timeout: 60
  # Files at or below this threshold are processed inline before sending to LLM.
  # Files above this threshold (or with unknown size) use the two-phase placeholder flow.
  # Set to 0 to always use placeholder flow.
  sync_process_threshold_mb: 1

  image:
    transcribe: false
    passthrough: false

  audio:
    transcribe: false
    passthrough: false
    max_duration: 60
    trim_over_limit: true

  video:
    transcribe: false
    passthrough: false
    max_duration: 30
    trim_over_limit: true

  document:
    transcribe: false
    passthrough: false
